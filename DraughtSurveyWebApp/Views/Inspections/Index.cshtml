@model IEnumerable<DraughtSurveyWebApp.Models.Inspection>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VesselName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Port)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyReference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OperationType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
