<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Draught Survey Web App</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@

    <script>
        (function(){
            try{
                let theme = localStorage.getItem("bs-theme");
                if(!theme){
                    theme = window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
                }
                document.documentElement.setAttribute("data-bs-theme", theme);
            }
            catch{
                /* no-op */
            }
        })();
    </script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DraughtSurveyWebApp.styles.css" asp-append-version="true" />
    
</head>
<body class="bg-body text-body">
    <header>
        <nav class="navbar navbar-expand-sm bg-body-tertiary border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Draught Survey Web App</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>                         *@
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Inspections" asp-action="Index">Inspections</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="HydrostaticTables" asp-action="Index">Hydrostatic Tables</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a class="nav-link" asp-controller="ExcelTemplate" asp-action="Index">Excel Templates</a>
                            </li>

                            <li>
                                <a class="nav-link" asp-controller="ApplicationUsers" asp-action="Index">Admin Panel</a>
                            </li>

                            <li>
                                <a class="nav-link" asp-controller="Stats" asp-action="Index">Admin Stats</a>
                            </li>
                            
                        }                        
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" id="theme-toggle" href="javascript:void(0);" title="Toggle theme">🌙</a>
                        </li>

                        <partial name="_LoginPartial" />
                    </ul>

                    @* <div class="d-flex align-items-center gap-2">
                        <button id="theme-toggle" type="button" class="btn btn border-0 bg-transparent" title="Toggle theme">🌙</button>
                        <partial name="_LoginPartial" />
                    </div> *@
                    
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*Scripts*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>    
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function(){
            const htmlEl = document.documentElement;
            const toggle = document.getElementById("theme-toggle");            

            const updateIcon = () => {
                const isDark = htmlEl.getAttribute("data-bs-theme") === "dark";
                toggle.textContent = isDark ? "☀️" : "🌙";                
            }

            updateIcon();

            toggle.addEventListener("click", () => {
                const newTheme = htmlEl.getAttribute("data-bs-theme") === "light" ? "dark" : "light";
                htmlEl.setAttribute("data-bs-theme", newTheme);
                try{
                    localStorage.setItem("bs-theme", newTheme);
                }
                catch{

                }
                updateIcon();
            });
        });
    </script>

   
    

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - DraughtSurveyWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
        
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
