@model  DraughtSurveyWebApp.ViewModels.CargoInputViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<h4>Cargo Info</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InspectionId" />

            <div class="form-group">
                <label asp-for="CargoName"></label>
                <input asp-for="CargoName" class="form-control" />
                <span asp-validation-for="CargoName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DeclaredWeight"></label>
                <input asp-for="DeclaredWeight" class="form-control" type="number" step="0.001" />
                <span asp-validation-for="DeclaredWeight" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LoadingTerminal"></label>
                <input asp-for="LoadingTerminal" class="form-control" />
                <span asp-validation-for="LoadingTerminal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BerthNumber"></label>
                <input asp-for="BerthNumber" class="form-control" />
                <span asp-validation-for="BerthNumber" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Inspections" asp-action="Details" asp-route-id="@Model.InspectionId">Back</a>
</div>