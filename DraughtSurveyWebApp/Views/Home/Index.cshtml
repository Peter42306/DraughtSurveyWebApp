@{
    ViewData["Title"] = "Draught Survey Web App — Online Draft Survey Calculator";
    ViewData["Description"] = "Draught Surveys online with Excel-like workflow, hydrostatic autofill, cloud storage, Excel export.";    
    ViewData["OgImage"] = Url.Content("~/images/og/20250316_111106.jpg");
}

<div>

    

    <div class="row">

        <div class="col-md-6">
            <div id="heroCarousel" class="carousel slide mb-4" data-bs-ride="carousel" data-bs-interval="5000">
                <div class="carousel-inner rounded-3 shadow-sm overflow-hidden">
                    <div class="carousel-item active">
                        <img src="~/images/home/1_20250316_111106.jpg" class="d-block w-100" alt="Draught reading on bow" loading="eager" fetchpriority="high" asp-append-version="true">
                    </div>                    
                    <div class="carousel-item">
                        <img src="~/images/home/3_20240816_163439.jpg" class="d-block w-100" alt="General view from aft" loading="lazy" decoding="async" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/3_20240816_163832.jpg" class="d-block w-100" alt="Draught reading at midship" loading="lazy" decoding="async" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/4_20250301_125634.jpg" class="d-block w-100" alt="General view from foreward" loading="lazy" decoding="async" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/5_20250303_140917.jpg" class="d-block w-100" alt="Draught reading from aft" loading="lazy" decoding="async" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/6_20250303_141058.jpg" class="d-block w-100" alt="Draught reading at midship" loading="lazy" decoding="async" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/7_20250304_073438.jpg" class="d-block w-100" alt="Draught reading at forward" loading="lazy" decoding="async" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/8_20250304_073243.jpg" class="d-block w-100" alt="General view from port side" loading="lazy" decoding="async" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/9_IMG_20200721_062759.jpg" class="d-block w-100" alt="Draught survey at anchorage" loading="lazy" decoding="async" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/9_IMG5660.jpg" class="d-block w-100" alt="Winter draught survey" loading="lazy" decoding="async" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/10_IMGP5655.jpg" class="d-block w-100" alt="Draughts and ice" loading="lazy" decoding="async" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/11_IMG_20200721_132142_1.jpg" class="d-block w-100" alt="Draught survey at anchorage" loading="lazy" decoding="async" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/12_photo_2021-11-08_18-38-59.jpg" class="d-block w-100" alt="Hydrostatic tables" loading="lazy" decoding="async" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/2_20250221_140136.jpg" class="d-block w-100" alt="Draught reading at aft" loading="lazy" decoding="async" asp-append-version="true">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev" aria-label="Previous">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next" aria-label="Next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button>
            </div>
        </div>

        <div class="col-md-6">
            <h1 class="h4 text-center mt-2 mb-2">Draught Survey Web Application</h1>
            <hr />

            <p>
                An online draught survey calculator for ship officers and marine surveyors.
            </p>

            <p>
                Perform draught survey in the same familiar way as in Excel, but with the added convenience and flexibility of cloud storage.
            </p>            

            <p>Key features:</p>
            

            <ul>
                <li>Excel-like workflow</li>
                <li>Autofill of ship's details and hydrostatic tables</li>
                <li>Cloud storage</li>
                <li>Export of report in Excel</li>
            </ul>
           
           
        </div>        

         
    </div>

    <hr />
    <div class="text-center">
        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <div class="d-inline-flex gap-2">
                <a class="btn btn-outline-primary" asp-controller="Inspections" asp-action="Create">Start a new survey</a>
                <a class="btn btn-outline-secondary" asp-controller="Inspections" asp-action="Index">My inspections</a>
            </div>
            <div class="mt-2">
                <a class="link-secondary" href="https://youtu.be/w-mKc8zRkAc" target="_blank" rel="noopener" title="Watch YouTube demo"><i class="bi bi-youtube me-1"></i></a>
                <span class="text-muted">·</span>                
            </div>
            <div class="mt-2">
                <a class="link-secondary" asp-controller="About" asp-action="Index">Learn more</a>
                <span class="text-muted">·</span>
                <a class="link-secondary" asp-controller="Contact" asp-action="Index">Contact</a>
            </div>
        }
        else
        {
            <div class="d-inline-flex gap-2">
                <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">Sign in</a>
                <a class="btn btn-outline-secondary" asp-area="Identity" asp-page="/Account/Register">Create account</a>
            </div>
            
            <div class="mt-2">
                <a class="link-secondary" href="https://youtu.be/w-mKc8zRkAc" target="_blank" rel="noopener"><i class="bi bi-youtube me-2 text-danger"></i>YouTube demo</a>
                <span class="text-muted">·</span>
                <a class="link-secondary" asp-controller="About" asp-action="Index">Learn more</a>                
                <span class="text-muted">·</span>
                <a class="link-secondary" asp-controller="Contact" asp-action="Index">Contact</a>
            </div>

        }
    </div>
    
</div>